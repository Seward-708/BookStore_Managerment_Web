@model BookStore_Managerment_Web.Models.Unit

@{
    ViewBag.Title = "DeleteUnit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div>

    <dl class="dl-horizontal">
        <dt>
            Tên đơn vị
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Unit_Name)
        </dd>

        <dt>
            Trạng thái
        </dt>
        @if (Model.Unit_State == true)
        {
            <dd>
                Đang hoạt động
            </dd>
        }
        else
        {
            <dd>
                Ngừng hoạt động
            </dd>

        }

    </dl>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="Xóa" class="btn btn-warning" /> 
        @Html.ActionLink("Trở về", "Unit", "", new { @class = "btn btn-default" })
    </div>
}

